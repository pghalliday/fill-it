{
  "name": "Fill It",
  "version": "1.0.0",
  "description": "Fill forms",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/fill-it-16.png",
      "32": "images/fill-it-32.png",
      "48": "images/fill-it-48.png",
      "128": "images/fill-it-128.png"
    }
  },
  "icons": {
    "16": "images/fill-it-16.png",
    "32": "images/fill-it-32.png",
    "48": "images/fill-it-48.png",
    "128": "images/fill-it-128.png"
  },
  "manifest_version": 2
}
